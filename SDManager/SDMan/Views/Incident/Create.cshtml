@model SDMan.Models.IncidentModel

@{
    ViewData["Title"] = "Create2";
}

<h1>View</h1>

<h4>IncidentModel</h4>
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<script>
    $(document).ready(function () {
        $("#Category").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/Incident/CategoryJS",
                    type: "POST",
                    dataType: "json",
                    data: { Prefix: request.term },
                    success: function (data) {
                        response(data);
                    }
                })
            },

        });
    })
    $(document).ready(function () {
        $("#Group").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/Incident/GroupJS",
                    type: "POST",
                    dataType: "json",
                    data: { Prefix: request.term },
                    success: function (data) {
                        response(data);
                    }
                })
            },

        });
    })
    $(document).ready(function () {
        $("#Department").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/Incident/DepartmentJS",
                    type: "POST",
                    dataType: "json",
                    data: { Prefix: request.term },
                    success: function (data) {
                        response(data);
                    }
                })
            },

        });
    })
    $(document).ready(function () {
        $("#Priority").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/Incident/PriorityJS",
                    type: "POST",
                    dataType: "json",
                    data: { Prefix: request.term },
                    success: function (data) {
                        response(data);
                    }
                })
            },

        });
    })
</script>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IncidentDescription" class="control-label"></label>
                <input asp-for="IncidentDescription" class="form-control" />
                <span asp-validation-for="IncidentDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Category">Category:</label>
                <input asp-for="CategoryName" type"text" name="CategoryName" id="Category" />
            </div>
            
            <div class="form-group">
                <label for="Department">Department:</label>
                <input asp-for="DepartmentName" type"text" name="DepartmentName" id="Department" />
            </div>
            <div class="form-group">
                <label for="Priority">Priority:</label>
                <input asp-for="PriorityName" type"text" name="PriorityName" id="Priority" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

